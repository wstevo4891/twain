<p id="notice"><%%= notice %></p>

<div class="container pb-5">
  <%%= render(
    'resource_nav',
    resource: @<%= singular_table_name %>,
    index_path: <%= plural_table_name %>_path,
    edit_path: edit_<%= singular_table_name %>_path(@<%= singular_table_name %>)
  ) %>

  <div class="row justify-content-center mt-4 mb-4">
    <h1><%%= @<%= singular_table_name %>.title %></h1>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">
          <strong>FIELD</strong>
        </th>
        <th scope="col">
          <strong>VALUE</strong>
        </th>
      </tr>
    </thead>

    <tbody>

    <%% @<%= singular_table_name %>.attributes.each do |key, value| %>
      <tr>
        <td><%%= key.upcase %></td>
        <td><%%= value %></td>
      </tr>
    <%% end %>

    </tbody>
  </table>
</div>
