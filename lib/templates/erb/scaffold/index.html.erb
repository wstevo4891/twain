<%= "<%# app/views/#{plural_table_name}/index.html.erb %>" %>

<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="text-center mt-4 mb-4">
    <%= plural_table_name.gsub('_', ' ').capitalize %>
  </h1>

  <%= "<%= link_to(
    'New #{singular_table_name.gsub('_', ' ').capitalize}',
    new_#{singular_table_name}_path,
    class: 'btn btn-outline-primary mt-4 mb-4'
  ) %%>" %>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
        <tr>
          <th scope="row"><%%= <%= singular_table_name %>.id %></th>

          <td>
            <%= "<%= link_to(
              'Show',
              #{singular_table_name},
              class: 'btn btn-sm btn-outline-info'
            ) %%>" %>
          </td>

          <td>
            <%= "<%= link_to(
              'Edit',
              edit_#{singular_table_name}_path(#{singular_table_name}),
              class: 'btn btn-sm btn-outline-success'
            ) %%>" %>
          </td>

          <td>
            <%= "<%= link_to(
              'Delete',
              #{singular_table_name},
              method: :delete,
              data: { confirm: 'Are you sure?' },
              class: 'btn btn-sm btn-outline-danger'
            ) %%>" %>
          </td>
        </tr>
      <%% end %>
    </tbody>
  </table>
</div>
