  </div>

  <h1 class="text-center mt-4 mb-4">Editing <%= singular_table_name.gsub('_', ' ').capitalize %></h1>

  <div class="row justify-content-center">
    <div class="col-lg-10">
      <%%= render 'form', <%= singular_table_name %>: @<%= singular_table_name %> %>
    </div>
  </div>
</div>
