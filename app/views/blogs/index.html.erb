<%# app/views/blogs/index.html.erb %>

<p id="notice"><%= notice %></p>

<div class="container">
  <h1 class="text-center mt-4 mb-4">Blogs</h1>

  <%= link_to(
    'New Blog',
    new_blog_path,
    class: 'btn btn-outline-primary mt-4 mb-4'
  ) %>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @blogs.each do |blog| %>
        <tr>
          <th scope="row"><%= blog.name %></th>

          <td>
            <%= link_to(
              'Show',
              blog,
              class: 'btn btn-sm btn-outline-info'
            ) %>
          </td>
          
          <td>
            <%=link_to(
              'Edit',
              edit_blog_path(blog),
              class: 'btn btn-sm btn-outline-success'
            ) %>
          </td>
          
          <td>
            <%= link_to(
              'Delete',
              blog,
              method: :delete,
              data: { confirm: 'Are you sure?' },
              class: 'btn btn-sm btn-outline-danger'
            ) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
