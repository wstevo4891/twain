<p id="notice"><%= notice %></p>

<div class="container pb-5">
  <%= render(
    'resource_nav',
    resource: @role,
    index_path: roles_path,
    edit_path: edit_role_path(@role)
  ) %>

  <div class="row justify-content-center mt-4 mb-4">
    <h1><%= @role.title %></h1>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">
          <strong>FIELD</strong>
        </th>
        <th scope="col">
          <strong>VALUE</strong>
        </th>
      </tr>
    </thead>

    <tbody>

    <% @role.attributes.each do |key, value| %>
      <tr>
        <td><%= key.upcase %></td>
        <td><%= value %></td>
      </tr>
    <% end %>

    </tbody>
  </table>
</div>
