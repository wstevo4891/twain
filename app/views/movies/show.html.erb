<p id="notice"><%= notice %></p>

<div class="container pb-5">
  <%= render(
    'resource_nav',
    resource: @movie,
    index_path: movies_path,
    edit_path: edit_movie_path(@movie)
  ) %>

  <div class="row justify-content-center mt-4 mb-4">
    <h1><%= @movie.title %></h1>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">
          <strong>FIELD</strong>
        </th>
        <th scope="col">
          <strong>VALUE</strong>
        </th>
      </tr>
    </thead>

    <tbody>

    <% image_attrs = ['photo', 'banner', 'logo'] %>

    <% @movie.attributes.each do |key, value| %>
      <tr>
        <td><%= key.upcase %></td>

        <% if image_attrs.include?(key) %>
          <td><%= @movie.send(key).url %></td>
        <% else %>
          <td><%= value %></td>
        <% end %>
      </tr>
    <% end %>

    </tbody>
  </table>
</div>
